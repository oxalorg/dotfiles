[credential "https://dev.azure.com"]
	useHttpPath = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[pager]
  blame  = delta
  diff   = delta
  reflog = delta
  show   = delta
